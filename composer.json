{
    "name": "piotrpress/composer-github-artifacts",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "This Composer plugin adds support for using GitHub Workflow Artifacts as Composer Repositories.",
    "homepage": "https://github.com/PiotrPress/composer-github-artifacts",
    "authors": [
      {
        "name": "Piotr Niewiadomski",
        "homepage": "https://piotr.press"
      }
    ],
    "keywords": [
        "composer", "composer plugin", "artifacts", "artifact", "github", "github.com", "actions", "workflows", "php"
    ],
    "require": {
      "php": ">=7.4",
      "composer-plugin-api": "^2.0",
      "piotrpress/streamer": "^1.0",
      "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
      "composer/composer": "^2.0"
    },
    "extra": {
      "class": "PiotrPress\\Composer\\GitHub\\Artifacts\\Plugin"
    },
    "autoload": {
      "psr-4": {
        "PiotrPress\\Composer\\GitHub\\Artifacts\\": "src/"
      },
      "classmap": [
        "src"
      ]
    }
  }